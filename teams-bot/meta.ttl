# Base concepts for Teams Bot
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix meta: <./meta#> .

# Core Classes
meta:BotComponent a rdfs:Class ;
    rdfs:label "Bot Component" ;
    rdfs:comment "A core component of the Teams Bot system" .

meta:Handler a rdfs:Class ;
    rdfs:label "Handler" ;
    rdfs:comment "A component that handles specific bot events or activities" .

meta:Activity a rdfs:Class ;
    rdfs:label "Activity" ;
    rdfs:comment "A Teams Bot activity representing an interaction" .

meta:Context a rdfs:Class ;
    rdfs:label "Context" ;
    rdfs:comment "Context for bot operations and interactions" .

# Core Properties
meta:handles a rdf:Property ;
    rdfs:label "handles" ;
    rdfs:comment "Indicates what a handler processes" ;
    rdfs:domain meta:Handler ;
    rdfs:range meta:Activity .

meta:hasContext a rdf:Property ;
    rdfs:label "has context" ;
    rdfs:comment "Links an activity to its context" ;
    rdfs:domain meta:Activity ;
    rdfs:range meta:Context .

meta:hasError a rdf:Property ;
    rdfs:label "has error" ;
    rdfs:comment "Links a context to an error" ;
    rdfs:domain meta:Context ;
    rdfs:range xsd:string . 