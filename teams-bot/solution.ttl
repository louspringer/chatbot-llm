@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix meta: <./meta#> .
@prefix problem: <./problem#> .
@prefix solution: <./solution#> .

# Bot Components
solution:TeamsBot a rdfs:Class ;
    rdfs:label "Teams Bot" ;
    rdfs:comment "Main Teams Bot class" ;
    rdfs:subClassOf meta:BotComponent .

solution:BotAdapter a rdfs:Class ;
    rdfs:label "Bot Adapter" ;
    rdfs:comment "Adapter for processing bot activities" ;
    rdfs:subClassOf meta:BotComponent .

solution:ErrorHandler a rdfs:Class ;
    rdfs:label "Error Handler" ;
    rdfs:comment "Handler for bot errors" ;
    rdfs:subClassOf meta:Handler .

# Bot Properties
solution:hasAdapter a rdf:Property ;
    rdfs:label "has adapter" ;
    rdfs:comment "Links bot to its adapter" ;
    rdfs:domain solution:TeamsBot ;
    rdfs:range solution:BotAdapter .

solution:hasErrorHandler a rdf:Property ;
    rdfs:label "has error handler" ;
    rdfs:comment "Links adapter to error handler" ;
    rdfs:domain solution:BotAdapter ;
    rdfs:range solution:ErrorHandler .

solution:processesActivity a rdf:Property ;
    rdfs:label "processes activity" ;
    rdfs:comment "Indicates adapter processes an activity" ;
    rdfs:domain solution:BotAdapter ;
    rdfs:range meta:Activity .

# Bot Methods
solution:onTurn a rdf:Property ;
    rdfs:label "on turn" ;
    rdfs:comment "Bot turn handler method" ;
    rdfs:domain solution:TeamsBot .

solution:onError a rdf:Property ;
    rdfs:label "on error" ;
    rdfs:comment "Error handler method" ;
    rdfs:domain solution:ErrorHandler . 