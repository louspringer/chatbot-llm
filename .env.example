# Environment Configuration Example
# Owned by: guidance:EnvironmentConfigOntology
# Version: 1.0.0
# Purpose: Example configuration with dummy values for documentation

# Teams Bot Configuration
# Owner: solution:TeamsBotConfiguration
TEAMS_BOT_ID=123456-7890-abcd-efgh-ijklmnopqrst
TEAMS_BOT_PASSWORD=dummy_bot_password_do_not_use

# Development Settings
# Owner: meta:DevelopmentConfiguration
DEBUG=true
LOG_LEVEL=DEBUG

# 1Password Configuration
# Owner: solution:SecretsManagement
OP_CONNECT_HOST=https://example.1password.connect
OP_CONNECT_TOKEN=dummy_token_do_not_use

# Azure Configuration (for cloud deployment)
# Owner: solution:CloudDeployment
AZURE_TENANT_ID=12345678-90ab-cdef-ghij-klmnopqrstuv
AZURE_CLIENT_ID=98765432-10ab-cdef-ghij-klmnopqrstuv
AZURE_CLIENT_SECRET=dummy_secret_do_not_use

# Azure Bot Configuration
BOT_APP_ID=                  # Microsoft App ID (UUID) from Azure Bot registration
BOT_APP_SECRET=              # Microsoft App Secret from Azure Bot registration
BOT_ENDPOINT=                # Full bot endpoint URL (e.g., https://<name>.azurewebsites.net/api/messages)

# Azure Resource Configuration
AZURE_SUBSCRIPTION_ID=       # Azure Subscription ID for deployment
AZURE_RESOURCE_GROUP=        # Resource group name (e.g., teams-bot-rg)
AZURE_LOCATION=              # Azure region (e.g., westus2)

# Storage Configuration
STORAGE_ACCOUNT_NAME=        # Azure Storage account name
STORAGE_ACCOUNT_KEY=         # Azure Storage account access key

# Function App Configuration
FUNCTION_APP_NAME=           # Azure Function App name
FUNCTION_APP_SKU=            # Function App SKU (e.g., Y1)
PYTHON_RUNTIME=              # Python version (e.g., 3.9)

# Application Insights
APPINSIGHTS_ENABLED=         # true/false
APPINSIGHTS_KEY=            # Application Insights instrumentation key

# Security Configuration
SECURITY_LEVEL=              # Standard/High
DATA_CLASSIFICATION=         # Public/Internal/Confidential

# Cost Management
COST_CENTER=                # Development/Production

# Resource Tags
ENVIRONMENT=                # Development/Staging/Production
OWNER_EMAIL=               # Resource owner email

# Microsoft Teams Bot Configuration
MICROSOFT_APP_ID=your_app_id_here
MICROSOFT_APP_PASSWORD=your_app_password_here
MICROSOFT_APP_TENANT_ID=your_tenant_id_here

# Snowflake Configuration
SNOWFLAKE_ACCOUNT=your_account_here
SNOWFLAKE_USER=your_user_here
SNOWFLAKE_PASSWORD=your_password_here
SNOWFLAKE_WAREHOUSE=your_warehouse_here
SNOWFLAKE_DATABASE=your_database_here
SNOWFLAKE_SCHEMA=your_schema_here

# Bot Configuration
BOT_ENVIRONMENT=development  # development, staging, production
MAX_RETRIES=3
TIMEOUT_SECONDS=30

# Security Configuration
ALLOWED_TENANTS=tenant1,tenant2
ENCRYPTION_KEY=your_encryption_key_here

# Feature Flags
ENABLE_ADVANCED_ANALYTICS=false
ENABLE_CUSTOM_COMMANDS=true
ENABLE_AUTO_SUGGESTIONS=true 